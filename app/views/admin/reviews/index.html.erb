<p style="color: green"><%= notice %></p>
<%= render 'layouts/navigation_for_admin' %>
<h1 align="center">Reviews</h1>

<table class="table">
  <thead>
  <tr>
    <th scope="col">Author's name</th>
    <th scope="col">Author's email</th>
    <th scope="col">Review's body</th>
    <th scope="col">Status</th>
    <th scope="col">Change status</th>
    <th scope="col">Delete</th>
  </tr>
  </thead>

  <tbody>
  <% @reviews.each do |review| %>
    <tr>
      <td> <%= review.author_name %></td>
      <td> <%= review.author_email%></td>
      <td> <%= review.body.first(80) %></td>
      <td> <%= review.status %></td>
<!--      <td> <%#= link_to review.status, toggle_status_admin_review_path(review) %>&nbsp; </td>-->
      <td> <%= button_to "Change status", toggle_status_admin_review_path(review), method: :get, class: "btn btn-xs btn-warning" %>
      <td> <%= button_to "Delete", admin_review_path(review), method: :delete, data: { confirm: "Are you sure you want to delete this review?"}, class: "btn btn-xs btn-danger" %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
