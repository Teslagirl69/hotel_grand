<%= render 'layouts/navigation_for_admin' %>
<h1>New room</h1>
<%= form_for :room, url: admin_rooms_url, data: {turbo:false} do |form| %>
    <% if @room.errors.any? %>
      <div style="color: red">
        <h2><%= pluralize(room.errors.count, "error") %> prohibited this room from being saved:</h2>

        <ul>
          <% @room.errors.each do |error| %>
            <li><%= error.full_message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div>
      <%= form.label :name, style: "display: block" %>
      <%= form.text_field :name %>
    </div>

    <div>
      <%= form.label :description, style: "display: block" %>
      <%= form.text_area :description %>
    </div>

  <div>
    <%= form.label :short_description, style: "display: block" %>
    <%= form.text_area :short_description %>
  </div>


  <div>
      <%= form.label :price, style: "display: block" %>
      <%= form.number_field :price %>
    </div>
  <br>
      <div>
        <%= form.label "Add images:", style: "display: block" %>
        <%= form.file_field :images, multiple: true %><br>
  </div>
  <br>
    <div>
      <%= form.submit %>
    </div>
  <% end %>

<br>

<div>
  <%= link_to "Back to rooms", admin_rooms_url %>
</div>
