<%= render 'layouts/navigation_for_admin' %>
<h1>Editing room</h1>
  <% if @room.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(room.errors.count, "error") %> prohibited this room from being saved:</h2>

      <ul>
        <% @room.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
<%= form_for :room, url:  admin_room_path(@room), method: :put, data: {turbo:false} do |form| %>
  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :description, style: "display: block" %>
    <%= form.text_area :description %>
  </div>

  <div>
    <%= form.label :price, style: "display: block" %>
    <%= form.number_field :price %>
  </div>

  <div>
    <%= form.label :short_description, style: "display: block" %>
    <%= form.text_area :short_description %>
  </div>

  <div>
    <%= form.label "Add images:", style: "display: block" %>
    <%= form.file_field :images, multiple: true %><br>
  </div>
  <div>
    <%= form.submit%>
  </div>
<% end %>

<br>

<div>
  <%= link_to "Back to rooms", admin_rooms_path %>
</div>
<div>
  <%= link_to "Create new room", new_admin_room_path %>
</div>
